<ol class="posts">
  <% posts.each do |post| %>

    <!-- FIXME weird dm bug workaround -->
    <% person = Person.get(post.person_id) %>
    <% tags = Tag.all(:id => post.post_tags.map { |t| t.tag_id }) %>

    <%= partial :post, :locals => { :post => post, :person => person, :tags => tags, :detail_view => false } %>

  <% end %>
</ol>