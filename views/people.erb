<ol class="persons">

  <% pager = pager_for(User) %>

  <%= pager.to_html('/people', :size => 3) %>

  <% User.page(current_page, :order => [ :github_name.asc ], :per_page => 72).each do |user| %>
  <li class="person">
    <h3>
      <span class="person-stats">
        <%= gravatar_image(user) %>
      </span>
      <a href="http://github.com/<%= user.github_name %>" title="<%= user.github_name%>'s Github account">
        <%= user.github_name %>
      </a>
    </h3>
    <dl class="person-data">
      <dt>github</dt>
      <dd><a href="http://github.com/<%= user.github_name %>"><%= user.github_name %></a></dd>
      <dt>twitter</dt>
      <dd><a href="http://twitter.com/<%= user.twitter_name %>"><%= user.twitter_name %></a></dd>
      <% if user.has_personal_posts? %>
      <dt>personal stuff</dt>
      <dd><a href="/posts?person=<%= user.github_name %>&personal=true">posts</a></dd>
      <% end %>
    </dl>
   </li>
  <% end %>

  <%= pager.to_html('/people', :size => 3) %>

</ol>
